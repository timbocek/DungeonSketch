<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/token_manager_delete_button_frame"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/token_manager_taglist_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/token_manager_delete_button_frame" >
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
                <com.tbocek.android.combatmap.view.GridViewCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/token_manager_grid_view"
                    android:numColumns = "auto_fit"
                    android:columnWidth="120dp"
                    android:stretchMode="columnWidth"
                    />

        <TextView
            android:id="@+id/token_manager_disabled_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disabled_tag_explanation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/token_manager_enable_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="209dp"
            android:text="@string/activate_tag" />

    </RelativeLayout>

</LinearLayout>